{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "func-names": "off",
    "no-unused-vars": "off",
    "no-console": "off",
    "no-process-exit": "off",
    "class-methods-use-this": "off",
    "no-shadow": "off",
    "react/prop-types": "off",
    "react/require-default-props": "off",
    "no-multi-assign": "off",
    "react/forbid-prop-types": "warn",
    "no-underscore-dangle": "off",
    "comma-dangle": "error",
    // This let us use for of without warnings. for of performance and readibility >>>>> forEach...
    "no-restricted-syntax": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  }
}
